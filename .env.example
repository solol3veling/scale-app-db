# PostgreSQL Configuration
POSTGRES_DB=scaleapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# S3 Backup Configuration (IAM User credentials)
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Timezone
TZ=UTC

# pgAdmin Configuration (optional - use with docker-compose --profile admin)
PGADMIN_DEFAULT_EMAIL=admin@scaleapp.com
PGADMIN_DEFAULT_PASSWORD=admin_password_here
PGADMIN_PORT=5050
